[Unit]
Description=Tulip - OllyGarden's commercially supported OpenTelemetry Collector
After=network.target

[Service]
EnvironmentFile=/etc/tulip/tulip.conf
ExecStart=/usr/bin/tulip $OTELCOL_OPTIONS
KillMode=mixed
Restart=on-failure
Type=simple
User=tulip
Group=tulip

[Install]
WantedBy=multi-user.target
